    height: 150

<GraficoPopup>:
    title: "Janela de Gráficos"   #tem que ser do tamanho da tela
    size_hint_y: 1
    size_hint_x: 1 

<BancoDadosPopup>:
    title: "Configuração Banco de Dados"
    size_hint_y: None
    size_hint_x: 0.3
    height: 150