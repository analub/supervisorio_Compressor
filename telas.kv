#:kivy 2.1.0

<TelaPrincipal>:
    FloatLayout:

        # FUNDO ESTÁTICO (PLANTA)
        Image:
            source: "imagens/baseDesligada.png"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}

        # -------- LABELS --------

        # -------- BOTÕES INFERIORES --------

        Button:
            text: "COMANDO"
            size_hint: 0.12, 0.07
            pos_hint: {"x": 0.05, "y": 0.05}
            background_normal: ""
            background_down: ""
            background_color: 0, 0, 0, 0
            font_size: self.height * 0.4
            color: 0, 0, 0, 1

            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1   # #CCCCCC
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]

